# ntfy Configuration Example
# Copy this file to .env and update with your actual values

# Project
COMPOSE_PROJECT_NAME=ntfy-notification

# Base Configuration
NTFY_BASE_URL=http://localhost:8900
NTFY_PORT=8900

# Authentication
# Options: read-write, read-only, write-only, deny-all
NTFY_AUTH_DEFAULT_ACCESS=read-write
NTFY_ENABLE_LOGIN=false

# Proxy
NTFY_BEHIND_PROXY=false

# Timezone
TIMEZONE=UTC

# Notes:
# - To create users: docker exec -it ntfy-notification_ntfy_1 ntfy user add <username>
# - List users: docker exec -it ntfy-notification_ntfy_1 ntfy user list
