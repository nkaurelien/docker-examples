# n8n Docker Compose Configuration Example
# Copy this file to .env and update with your actual values

# Project Configuration
COMPOSE_PROJECT_NAME=n8n-automation

# PostgreSQL Configuration
POSTGRES_DB=n8n
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_admin_2024
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=n8n_db_2024
DB_POSTGRESDB_SCHEMA=public

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# n8n Basic Authentication
# Set to 'true' to enable basic auth (recommended for production)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin2024

# n8n Security
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true

# Encryption Key
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=/XW3uTl+KQ9rYiHgG+RiUmHH+EZhehC6jhGnQnMiXNk=

# Timezone
# Examples: Europe/Paris, America/New_York, Asia/Tokyo
TIMEZONE=Europe/Paris

# n8n Runners (for task queue and scaling)
N8N_RUNNERS_ENABLED=true

# Security Notes:
# - Change all default passwords before deployment
# - Generate a strong encryption key: openssl rand -base64 32
# - Use HTTPS (N8N_PROTOCOL=https) in production
# - Restrict network access appropriately
# - Keep .env file secure and never commit it to version control
