; =============================================================================
; Reverse DNS Zone for 192.168.1.x
; =============================================================================
; PTR records map IP addresses back to hostnames (reverse lookup)
; Zone name in named.conf: 1.168.192.in-addr.arpa
; =============================================================================

$TTL 1h

; -----------------------------------------------------------------------------
; SOA Record
; -----------------------------------------------------------------------------
@       IN      SOA     ns1.apps.local. admin.apps.local. (
                        2024013001      ; Serial (YYYYMMDDNN)
                        3600            ; Refresh (1 hour)
                        600             ; Retry (10 minutes)
                        604800          ; Expire (1 week)
                        1800 )          ; Negative Cache TTL (30 minutes)

; -----------------------------------------------------------------------------
; NS Record
; -----------------------------------------------------------------------------
@       IN      NS      ns1.apps.local.

; -----------------------------------------------------------------------------
; PTR Records - Reverse lookups for 192.168.1.x
; -----------------------------------------------------------------------------
; Format: <last-octet> IN PTR <hostname>
; Example: 100 = 192.168.1.100
; -----------------------------------------------------------------------------
100     IN      PTR     apps.local.
