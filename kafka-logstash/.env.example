# Kafka-Logstash Stack Configuration Example
# Copy this file to .env and update with your actual values

# Network Configuration
KAFKA_EXTERNAL_IP=localhost
KAFKA_PORT_BASE=909

# Topic Configuration
KAFKA_TOPIC_RAW_DATA=sensor_rawdata
KAFKA_TOPIC_PROCESSED_DATA=sensor_processdata

# CouchDB Integration (for storage pipeline)
COUCHDB_HOST=localhost
COUCHDB_PORT=5984
COUCHDB_DATABASE_RAW=iot-sensors-raw
COUCHDB_DATABASE_PROCESSED=iot-sensors-processed
COUCHDB_USER=admin
COUCHDB_PASSWORD=your-secure-password

# Elasticsearch Integration (for indexing pipeline)
ELASTICSEARCH_HOST=https://your-elasticsearch.example.com
ELASTICSEARCH_INDEX_PREFIX=sensor-data
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your-elastic-password

# Logstash Configuration
LOGSTASH_HEAP_SIZE=2g
LOGSTASH_PIPELINE_WORKERS=1
LOGSTASH_BATCH_SIZE=1
LOGSTASH_BATCH_DELAY=1

# Monitoring
KAFKA_UI_PORT=8081
LOGSTASH_MONITORING_PORT=9600