# Configuration Nginx SSL pour Erugo
# À utiliser avec nginx-certbot ou un reverse proxy existant
#
# 1. Générer le certificat:
#    make cert DOMAIN=erugo.example.com EMAIL=admin@example.com
#
# 2. Copier ce fichier vers votre config nginx:
#    cp nginx-ssl.conf.example /path/to/nginx/conf.d/erugo.conf

server {
    listen 80;
    server_name erugo.example.com;

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name erugo.example.com;

    ssl_certificate /etc/letsencrypt/live/erugo.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/erugo.example.com/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;

    add_header Strict-Transport-Security "max-age=63072000" always;

    # Erugo: taille max pour les uploads de fichiers
    client_max_body_size 500M;

    location / {
        proxy_pass http://erugo:80;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts pour gros fichiers
        proxy_connect_timeout 600;
        proxy_send_timeout 600;
        proxy_read_timeout 600;
    }
}
